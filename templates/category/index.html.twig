{% extends 'base.html.twig' %}

{% block title %}Category list{% endblock %}

{% block body %}

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 order-md-2 col-lg-9">
                <div class="d-flex m-5 justify-content-center ">
                    <h2>Create New Category</h2>
                    <a class="btn btn-success" href="{{ path('category.touch') }}">
                        Create
                    </a>
                </div>
                <div class="container-fluid d-flex justify-content-center align-content-center">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Product Count</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories  %}
                            <tr>
                                <th scope="row">{{category.id}}</th>
                                <td>{{category.name}}</td>
                                <td>{{category.getProducts().count()}}</td>
                                <td>
                                    <a class="btn btn-danger" href="{{ path('category.delete',{'id':category.id}) }}">
                                        Delete
                                    </a>

                                    <a class="btn btn-info" href="{{ path('category.touch',{'id':category.id}) }}">
                                        Update
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
