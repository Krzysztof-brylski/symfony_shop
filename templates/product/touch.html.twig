{% extends 'base.html.twig' %}

{% block title %}Touching product{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center  align-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3> {% if acton == "edit" %} Edit Product {%else %}Create Product {% endif %}</h3>
                    </div>
                    <div class="card-body p-2">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button
                                type="submit"
                                class="text-gray-100 btn btn-success">
                            Submit Product
                        </button>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>

        </div>

    </div>
{% endblock %}
